<div class="repo p-2 text-center">
  <a href="https://github.com/{{ include.username }}">
    <img
      class="repo-img-light w-100"
      alt="{{ include.username }}"
      src="https://github-readme-stats.vercel.app/api/top-langs/?username={{ include.username }}&theme={{ site.repo_theme_light }}&show_icons=true&exclude_repo=dw1209.github.io&hide=jupyter%20notebook&langs_count=3"
    >
    <img
      class="repo-img-dark w-100"
      alt="{{ include.username }}"
      src="https://github-readme-stats.vercel.app/api/top-langs/?username={{ include.username }}&theme={{ site.repo_theme_dark }}&show_icons=true&exclude_repo=dw1209.github.io&hide=jupyter%20notebook&langs_count=3"
    >
  </a>
</div>
